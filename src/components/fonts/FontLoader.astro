---
// use astro-font to optimize local font loading (Inter Variable Font and JetBrains Mono)
import { AstroFont } from "astro-font";
import { join } from "node:path";
---

<AstroFont
  config={[
    {
      name: "Inter",
      src: [
        {
          // use Variable Font, support all weights (400-900)
          weight: '400 900',
          style: 'normal',
          path: join(process.cwd(), 'public', 'fonts', 'inter', 'Inter-VariableFont_opsz,wght.woff2')
        }
      ],
      preload: true,
      display: "swap",
      selector: ".font-en, .en-only",
      fallback: "sans-serif",
    },
    {
      name: "JetBrains Mono",
      src: [
        {
          weight: '400',
          style: 'normal',
          path: join(process.cwd(), 'public', 'fonts', 'jetbrains-mono', 'JetBrainsMono-Regular.woff2')
        },
        {
          weight: '700',
          style: 'normal',
          path: join(process.cwd(), 'public', 'fonts', 'jetbrains-mono', 'JetBrainsMono-Bold.woff2')
        }
      ],
      preload: true,
      display: "swap",
      selector: "code, pre, kbd, .font-code",
      fallback: "monospace",
    },
  ]}
/> 