/**
 * Font utility component
 * Provide font-related utility classes and styles
 */
---

<style is:global>
  /* Apply optimized English font stack to pure English elements */
  .font-en {
    font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }

  /* Apply optimized Chinese font stack to pure Chinese elements */
  .font-zh {
    font-family: "Noto Sans SC", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }

  /* Mixed font stack (default) */
  .font-mixed {
    font-family: "Inter", "Noto Sans SC", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }

  /* Code font */
  .font-code {
    font-family: "JetBrains Mono", SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  }
</style>

