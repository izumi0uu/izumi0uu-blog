---
import { Image } from "astro:assets";
import { getPageMetadata } from "@/utils/content/metadata";
import { SUPPORTED_LOCALES } from "@/config/i18n";
import { SplitText } from "@/components/react/ui/SpiltText";
import { FallingText } from "@/components/react/ui/FallingText";
import RotatingText from "@/components/react/ui/RotatingText";
import { Button } from "@/components/react/radix-ui/Button";
import { Separator } from "@/components/react/radix-ui/Separator";
import { cn } from "@/utils/ui/styles";
import * as m from "@/paraglide/messages";
import { ROUTES } from "@/constants/routes";

import Centered from "@/layouts/Centered.astro";

import heroImage from "/public/images/default/hero-default.png";

export async function getStaticPaths() {
  return SUPPORTED_LOCALES.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params;

// 获取页面metadata（使用空字符串作为首页的key）
const metadata = getPageMetadata("");

const fallingText = m["pages.home.falling_text"]();

// Quick links 数据
const quickLinks = [
  { name: "Blog", href: ROUTES.BLOG, icon: "↗" },
  { name: "Projects", href: ROUTES.PROJECTS, icon: "↗" },
  { name: "About", href: ROUTES.ABOUT, icon: "↗" },
  { name: "Contact", href: ROUTES.CONTACT, icon: "↗" },
];
---

<Centered {metadata} className="flex-col-layout gap-16 first:gap-0">
  <!-- Hero Page Section -->
  <section id="hero-page" aria-label="hero-page" class={cn("flex-col-layout mode-theme-switch")}>
    <div
      id="hero-page"
      aria-label="hero-page"
      class="grid grid-cols-1 bg-surface-container lg:grid-cols-2 gap-8 p-4 min-h-[60vh] items-center"
    >
      <div
        id="hero-page-content"
        aria-label="hero-page-content"
        class="flex flex-col gap-6 justify-center max-w-2xl mx-auto lg:mx-0"
      >
        <div class="flex-col-layout items-baseline">
          <SplitText
            text={"Hello."}
            className="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-semibold text-center text-headings"
            duration={0.6}
            ease="power3.out"
            splitType="chars"
            from={{ opacity: 0, y: 40 }}
            to={{ opacity: 1, y: 0 }}
            threshold={0.1}
            rootMargin="-100px"
            textAlign="center"
            client:only="react"
          />
          <SplitText
            text={"I'm Izumi0uu."}
            className="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-semibold text-center text-headings"
            duration={0.6}
            ease="power3.out"
            splitType="chars"
            from={{ opacity: 0, y: 40 }}
            to={{ opacity: 1, y: 0 }}
            threshold={0.1}
            rootMargin="-100px"
            textAlign="center"
            client:only="react"
          />
        </div>
        <div class="inline-flex">
          <h1
            class="text-2xl md:text-3xl lg:text-4xl font-bold text-on-surface leading-relaxed lg:leading-snug"
          >
            I'm a&nbsp;
          </h1>
          <RotatingText
            texts={["Frontend Developer!", "Web Developer!", "Web3 Enthusiast!"]}
            mainClassName={cn(
              "text-primary overflow-hidden items-center justify-center rounded-lg text-2xl md:text-3xl lg:text-4xl xl:text-5xl border-b border-outline"
            )}
            staggerFrom={"last"}
            initial={{ y: "100%" }}
            animate={{ y: 0 }}
            exit={{ y: "-120%" }}
            staggerDuration={0.025}
            splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
            transition={{ type: "spring", damping: 30, stiffness: 400 }}
            rotationInterval={2000}
            client:only="react"
          />
        </div>
        <p class="text-on-surface-variant md:text-lg leading-relaxed max-w-lg">
          Happy to see you here! In this place, you can find some of interesting ideas and projects.
          Enjoy your time!
        </p>
        <Button variant="brutal" client:load>
          <a href={ROUTES.BLOG}>
            <span>To See My Blogs</span>
          </a>
        </Button>
      </div>
      <div
        id="hero-page-image"
        aria-label="hero-page-image"
        class="hidden lg:flex items-center justify-center w-full h-full max-w-md max-h-[500px] mx-auto"
      >
        <Image
          src={heroImage}
          alt="Hero page illustration"
          width={400}
          height={500}
          class="w-full h-auto object-contain rounded-lg shadow-lg"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section
    id="quick-links"
    aria-label="quick-links"
    class={cn("flex-col-layout mode-theme-switch bg-surface")}
  >
    <div class="max-w-6xl mx-auto w-full">
      <!-- Section Title -->
      <h2 class="text-2xl md:text-3xl font-bold text-headings mb-8">Quick links</h2>

      <!-- Links Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {
          quickLinks.map((link) => (
            <Button variant="brutal" client:load>
              <a href={link.href} class="flex items-center justify-between w-full">
                <span class="text-lg font-medium">{link.name}</span>
                <span class="text-xl group-hover:translate-x-1 transition-transform">
                  {link.icon}
                </span>
              </a>
            </Button>
          ))
        }
      </div>

      <!-- Optional Separator -->
      <div class="mx-auto">
        <Separator className="bg-outline" client:load />
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section
    id="projects"
    aria-label="projects"
    class={cn("flex-col-layout mode-theme-switch py-16 bg-surface")}
  >
  </section>

  <!-- Falling Text Section -->
  <section
    id="falling-text"
    aria-label="falling-text"
    class={cn("flex justify-center items-center h-[30vh] w-full bg-surface-container")}
  >
    <FallingText
      text={m["pages.home.falling_text"]()}
      highlightWords={["ideas", "share"]}
      highlightClass="highlighted"
      trigger="hover"
      wireframes={false}
      gravity={0.3}
      fontSize="2rem"
      mouseConstraintStiffness={0.9}
      client:load
    />
  </section>
</Centered>
