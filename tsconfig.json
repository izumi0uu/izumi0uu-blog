{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strict",
  "display": "Default",
  "esModuleInterop": true,
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/modules/*": ["modules/*"],
      "@/constants/*": ["constants/*"],
      "@/content/*": ["content/*"],
      "@/layouts/*": ["layouts/*"],
      "@/features/*": ["features/*"],
      "@/libs/*": ["libs/*"],
      "@/pages/*": ["pages/*"],
      "@/schemas/*": ["schemas/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/config/*": ["config/*"],
      "@/paraglide/*": ["paraglide/*"],
      "@/scripts/*": ["scripts/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["dist", "node_modules", "docs"]
}
